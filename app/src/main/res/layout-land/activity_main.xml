<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal">

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.tpandroid_exercicefragmentjava.Fragment1"
            android:id="@+id/mainActivityFragment1"
            android:layout_marginEnd="0dp"
            android:layout_weight="1" />

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.tpandroid_exercicefragmentjava.Fragment2"
            android:id="@+id/mainActivityFragment2"
            android:layout_marginStart="0dp"
            android:layout_weight="1" />
</LinearLayout>